<?xml version="1.0" ?>
<project name="MscHouses" default ="build">
     <property file="build.properties" prefix="build" />
    <property name="minecraftforge_src_archive" value="minecraftforge-src-${build.minecraft_version}-${build.forge_version}.zip"/>
    <property name="minecraftforge_src_archive_location" value="http://files.minecraftforge.net/minecraftforge/${minecraftforge_src_archive}" />
    
    <target name="forge-clean">
        <delete dir="forge"/>
    </target>
    
    <target name="forge-download">
        <mkdir dir="temp" />
        <get src="${minecraftforge_src_archive_location}" dest="temp/" verbose="true" usetimestamp="true" />   
    </target>
    
    <target name="forge-uncompress" depends="forge-download, forge-clean">
        <unzip src="temp/${minecraftforge_src_archive}" dest="" />
        <delete dir="temp" />
    </target>
    
    <target name="forge-install" depends="forge-uncompress">
        <exec dir="forge" executable="cmd.exe" osfamily="windows" failonerror="true">
            <arg value="/c" />
            <arg value="install.cmd" />
        </exec>
        <exec dir="forge/" executable="bash" osfamily="unix" failonerror="true">
            <arg line="install.sh" />
        </exec>
    </target>
    
    <target name="forge-clean-install" depends="forge-clean, forge-install" />
    
    <target name="clean">
        <delete dir="forge/mcp/temp" />
        <delete file="forge/mcp/src/minecraft/mcmod.info" />
        <delete file="forge/mcp/src/minecraft/pack.mcmeta" />
        <delete dir="forge/mcp/src/minecraft/me" />
        <delete dir="forge/mcp/reobf/minecraft" />
    </target>
    
    <target name="increment_build_number">
        <propertyfile file="build.properties">
            <entry key="build_number" type="int" operation="+" default="1" />
        </propertyfile>
    </target>
    
    <target name="prep">
        <copy todir="src/minecraft">
            <fileset dir="common" />
        </copy>
    </target>
    
    <target name="replace_tokens">
        <replace dir="forge/mcp/src/minecraft/mrkirby153/MscHouses" token="@VERSION@" value="${build.mod_version}" />
        <replace dir="forge/mcp/src/minecraft/mrkirby153/MscHouses" token="@FINGERPRINT@" value="${private.fingerprint_signature}" />
        <replace dir="forge/mcp/src/minecraft/mrkirby153/MscHouses" token="@BUILD_NUMBER@" value="${build.build_number}" />
    </target>
    
    <target name="recompile">
        <exec dir="forge/mcp" executable="cmd" osfamily="windows">
			<arg line="/c recompile.bat" />
		</exec>
		<exec dir="forge/mcp" executable="bash" osfamily="unix">
			<arg line="recompile.sh" />
		</exec>
    </target>
    
    <target name="reobfuscate">
		<exec dir="forge/mcp" executable="cmd" osfamily="windows">
			<arg line="/c reobfuscate_srg.bat" />
		</exec>
		<exec dir="forge/mcp" executable="bash" osfamily="unix">
			<arg line="reobfuscate_srg.sh" />
		</exec>
	</target>
    <target name="build">
        <!-- Install forge -->
        <antcall target="clean-install" />
		<!-- Prep for the build -->
		<antcall target="clean" />
		<antcall target="increment_build_number" />
		<antcall target="prep" />
        <antcall target="replace_tokens" />
		<antcall target="recompile" />
		<antcall target="reobfuscate" />

		<!-- Build the jar -->
		<mkdir dir="release/MC ${build.minecraft_version}/${build.mod_version}" />
		<jar destfile="release/MC ${build.minecraft_version}/${build.mod_version}/MscHouses-universal-${build.mod_version}-${build.build_number}.jar">
			<fileset dir="forge/mcp/src/minecraft/" includes="mcmod.info" />
			<fileset dir="forge/mcp/src/minecraft/" includes="pack.mcmeta" />
			<fileset dir="forge/mcp/reobf/minecraft" />
			<fileset dir="forge/mcp/resources" excludes="**/xcf/**" />
		</jar>

		<!-- Clean up the MCP source now that we are done -->
		<antcall target="clean" />
	</target>
    <target name="test">
        <antcall target="build" />
    </target>
    <target name="clean-install">
        <antcall target="clean" />
        <antcall target="forge-clean-install" />
        <antcall target="release" />
    </target>
</project>